<%= form_for(@signature) do |f| %>
  <%= render :partial => "/shared/error_messages", :locals => {:target => @signature} %>

  <div class="field">
    <%= f.label :body, "内容" %><br />
    <%= f.text_area :body, :size => "60x5" %>
  </div>

  <div class="actions">
    <%= f.submit "添加" %>
  </div>
<% end %>
