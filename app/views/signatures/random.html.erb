<% title "随便看看" %>
<br />


<div id="signature-body" class="outer_box">
      <div class="block_top">
        <div class="block_title">
          <div class="block_titleleft"></div>
          <div class="block_titlecenter">推荐指数：<%= @signature.up  %></div>
          <div class="block_titleright"></div>
        </div>
        <div class="block_line"></div>
      </div>
      <div class="body_box">
        <span class="category_item">
          <%=  @signature.id %>.<%= @signature.body %>
        </span>
      </div>
    </div>



<div id="op">
  <span><%= link_to "刷新", signatures_random_path, :remote => true %></span>
  <span><%= link_to "添加", new_signature_path, :remote => true %></span>
  <span id="up"><%= link_to "喜欢", up_signature_path(@signature), :remote => true, :method => :post %></span>
  <span id="syn"><%= link_to "同步到广播", syn_signature_path(@signature), :remote => true, :method => :post %></span>

</div>

<!-- ui-dialog -->
<div id="dialog" title="添加签名">
  <p>添加签名</p>
</div>



