<!DOCTYPE html>
<html>
  <head>
    <title>si9n</title>
    <%= stylesheet_link_tag :all %>
    <%#= javascript_include_tag respond_to?(:local_request?) && local_request? ? 'jquery.min' : 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' %>
    <%#= javascript_include_tag respond_to?(:local_request?) && local_request? ? 'jquery-ui.min' : 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js' %>

    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag "jquery-ui/ui-lightness/jquery-ui-1.8.7.custom" %>
    <%= javascript_include_tag "new-signature-dialog" %>

    <%= csrf_meta_tag %>
  </head>
  <body>

    <% if douban_authorized? %>
      <%= link_to '登出', douban_logout_path %>
      <% if current_user %>
        欢迎<%=link_to(current_user.title, current_user.link) %>
      <% end %>
    <% else %>
      <%= link_to(image_tag("douban_button.gif"), douban_login_path) %>
    <% end %>
    <ul>
      <li>
        <%= link_to_unless_current "随便看看", signatures_random_path %>
      </li>
      <li>
        <%= link_to_unless_current "排行榜", signatures_path %>
      </li>
      <li>
        <%= link_to_unless_current "我的语录", my_signatures_path %>
      </li>
    </ul>

    <div id="flash_notice" style="display:none"></div>
    <%= yield %>

  </body>
</html>
