<!DOCTYPE html>
<html>
  <head>
    <title>Bookshare</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <% if douban_authorized? %>
      <%= link_to 'Logout From Douban', douban_logout_path %>
    <% else %>
      <%= link_to "Login with douban", douban_login_path %>
    <% end %>

    <%= yield %>

  </body>
</html>
