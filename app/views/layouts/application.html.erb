<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title).blank? ? "语录网" : yield(:title) %></title>
    <%= stylesheet_link_tag :all %>
    <%#= javascript_include_tag respond_to?(:local_request?) && local_request? ? 'jquery.min' : 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' %>
    <%#= javascript_include_tag respond_to?(:local_request?) && local_request? ? 'jquery-ui.min' : 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js' %>

    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag "jquery-ui/ui-lightness/jquery-ui-1.8.7.custom" %>
    <%= javascript_include_tag "new-signature-dialog" %>
    <%= stylesheet_link_tag "base" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div style="margin-bottom: 0pt;" id="header">
      <div class="container">
        <h1 id="logo"><%= image_tag "logo.gif" %></h1>
        <div id="navigation">
          <ul id="menu" class="ui-tabs-nav menu">
            <%= link_to_with_class "随便看看", signatures_random_path %>
            <%= link_to_with_class "排行榜", signatures_path %>
            <% if current_user %>
              <%= link_to_with_class "我的语录", my_signatures_path %>
            <% end %>
          </ul>
        </div>
        <div id="quick-search">
          <div class="no-login">

            <% if douban_authorized? %>
              <%= link_to '登出', douban_logout_path %> &nbsp;&nbsp;
              <% if current_user %>
                欢迎 <%=link_to(current_user.title, current_user.link) %>
                <%= image_tag(current_user.avatar_url, :width => 25, :height => 25, :style => "vertical-align: middle;") unless current_user.avatar_url.blank? %>
              <% end %>
            <% else %>
              <%= link_to(image_tag("douban_button.gif"), douban_login_path) %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    <div id="flash_notice" style="display:none"></div>
    <div id="context" >
      <%= yield %>
    </div>
    <div id="footer">
      
    </div>
  </body>
</html>
